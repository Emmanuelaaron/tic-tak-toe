#!/usr/bin/env ruby

#board
#display_board
#play_game
#player_turn
#check_win
  #check row
  #check column
  #check disgonals
#check tie
#flip player


$board = [ '_',  '_', '_', 
           '_',  '_',  '_', 
           '_',  '_',  '_']
$game_on_going = true
$current_player = "X"

def display_board
  puts $board[0] +  '|' + $board[1] +  '|' + $board[2]
  puts $board[3] +  '|' + $board[4] +  '|' + $board[5]
  puts $board[6] +  '|' + $board[7] +  '|' + $board[8]
end

def players_turn
 
  puts 'choose from 1 - 9'
  turn = gets.chomp.to_i
  turn = turn - 1
  $board[turn] = $current_player
  
end

def flip_player
  if $current_player == 'X'
    $current_player = 'O'
  else
    $current_player = 'X'
  end
end

def play_game
  while $game_on_going
    players_turn
    flip_player
    display_board
  end
end

play_game
